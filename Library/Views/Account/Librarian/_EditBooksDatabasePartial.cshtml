@using System.Web.UI.WebControls
@model Library0.Models.AccountRoomModel

<div id="books-crud">
    <h3></h3>

    <span data-bind="if: totalLines() == 0">There is no books in the library yet</span>

    <div  class="container-fluid">
        <div class="row " data-bind="if: totalLines() > 0 || searchKey()!=''">
            <div class="col-lg-6">
                <div class="input-group input-group-sm">
                    <input id="search-book-input" type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" data-bind="click: searchByKey" type="button">Search</button>
                    </span>
                </div>
            </div>

            <div class="col-lg-6">
                <div data-bind="click: changePageSize" class="btn-group-sm pull-right">
                    <button data-size="1" type="button" data-bind="attr: { class: pageSize() == '1' ? 'btn btn-default active' : 'btn btn-default' }">Small</button>
                    <button data-size="2" type="button" data-bind="attr: { class: pageSize() == '2' ? 'btn btn-default active' : 'btn btn-default' }">Normal</button>
                    <button data-size="3" type="button" data-bind="attr: { class: pageSize() == '3' ? 'btn btn-default active' : 'btn btn-default' }">Large</button>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-responsive" data-bind="if: totalLines() > 0 || searchKey() != ''" >
            <thead data-bind="click: sortTable">
                <tr>
                    <th data-model-property="BookId" class="col-lg-1">Book ID 
                        <i data-bind="attr: { class: currentColumn() == 'BookId' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="Name" class="col-lg-3">Book name
                        <i data-bind="attr: { class: currentColumn() == 'Name' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="Author" class="col-lg-3">Author
                        <i data-bind="attr: { class: currentColumn() == 'Author' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="ISBN" class="col-lg-3">ISBN
                        <i data-bind="attr: { class: currentColumn() == 'ISBN' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="do-not-sort" class="col-lg-1"></th>
                    <th data-model-property="do-not-sort" class="col-lg-1"></th>
                </tr>
            </thead>
            <tbody id="bbb" data-bind="foreach: books">
                <tr>
                    <td data-bind="text: BookId"></td>
                    <td data-bind="text: Name"></td>
                    <td data-bind="text: Author"></td>
                    <td data-bind="text: ISBN"></td>
                    <td class="text-center"><i data-toggle="modal" data-target="#add-book-modal" class="glyphicon glyphicon-edit cursor-hand" data-bind="click: function () { $root.editLine($data); }"></i></td>
                    <td class="text-center"><i class="glyphicon glyphicon-remove cursor-hand" data-bind="click: function () { $root.deleteLine($data); }"></i></td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class=" col-lg-2">
                <button data-bind="click: function () { $root.editLine(); }" class="btn btn-primary" id="add-new-book" type="button" data-toggle="modal" data-target="#add-book-modal">Add new book</button>
            </div>
            <div class="col-md-8 col-md-offset-0" data-bind="if: totalLines() > 0 || searchKey() != ''">
                <ul class="pager">
                    <li><a data-bind="click: previousPage" href="#">Previous</a></li>
                    <li>
                        <label data-bind="text: currentPageIndex() + 1" class="badge"></label>
                        /
                        <label data-bind="text: totalPages()" class="badge"></label>
                    </li>
                    <li><a data-bind="click: nextPage" href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>



    <div class="modal fade" id="add-book-modal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Add a book</h4>
                </div>

                <form id="add-book-form" data-bind="submit: saveLine, with: selectedLine()">
                    <div class="bg-danger">@Html.ValidationSummary()</div>

                    <div class="modal-body form-horizontal">
                        <div class="form-group" data-bind="if: !$root.isNewLine()">
                            @Html.LabelFor(m => m.EditBook.BookId, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.EditBook.BookId, new { @class = "form-control", @readonly = "readonly", data_bind = "value: BookId" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.EditBook.Name, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.EditBook.Name, new { @class = "form-control", @placeholder = "Name", data_bind = "value: Name" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.EditBook.Author, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.EditBook.Author, new { @class = "form-control", @placeholder = "Author", data_bind = "value: Author" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.EditBook.Isbn, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.EditBook.Isbn, new { @class = "form-control", @placeholder = "ISBN", data_bind = "value: ISBN" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.EditBook.Description, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextAreaFor(m => m.EditBook.Description, new { @class = "form-control", @placeholder = "Description", @rows = "6", data_bind = "value: Description" })
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


