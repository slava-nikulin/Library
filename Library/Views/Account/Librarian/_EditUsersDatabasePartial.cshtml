@model Library.Models.AccountRoomModel
<div id="users-crud">
    <h3></h3>

    <span data-bind="if: totalLines() == 1">There is no users in the library, yet. Except of you, of course.</span>

    <div class="container-fluid">
        <div class="row " data-bind="if: totalLines() > 1 || searchKey() != ''">
            <div class="col-lg-6">
                <div class="input-group input-group-sm">
                    <input id="search-user-input" type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" data-bind="click: searchByKey" type="button">Search</button>
                    </span>
                </div>
            </div>

            <div class="col-lg-6">
                <div data-bind="click: changePageSize" class="btn-group-sm pull-right">
                    <button data-size="1" type="button" data-bind="attr: { class: pageSize() == '1' ? 'btn btn-default active' : 'btn btn-default' }">Small</button>
                    <button data-size="2" type="button" data-bind="attr: { class: pageSize() == '2' ? 'btn btn-default active' : 'btn btn-default' }">Normal</button>
                    <button data-size="3" type="button" data-bind="attr: { class: pageSize() == '3' ? 'btn btn-default active' : 'btn btn-default' }">Large</button>
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-responsive" data-bind="if: totalLines() > 1 || searchKey() != ''">
            <thead data-bind="click: sortTable">
                <tr>
                    <th data-model-property="LibraryUserId" class="col-lg-1">User ID
                        <i data-bind="attr: { class: currentColumn() == 'LibraryUserId' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="UserName" class="col-lg-4">User name
                        <i data-bind="attr: { class: currentColumn() == 'UserName' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="Email" class="col-lg-4">Email
                        <i data-bind="attr: { class: currentColumn() == 'Email' ? iconType() : '' }"></i>
                    </th>
                    <th data-model-property="do-not-sort" class="col-lg-1"></th>
                    <th data-model-property="do-not-sort" class="col-lg-1"></th>
                </tr>
            </thead>
            <tbody id="bbb" data-bind="foreach: lines">
                <tr>
                    <td data-bind="text: LibraryUserId"></td>
                    <td data-bind="text: UserName"></td>
                    <td data-bind="text: Email"></td>
                    <td class="text-center"><i class="glyphicon glyphicon-book" data-bind="click: function () { $root.issueBook($data); }"></i></td>
                    <td class="text-center"><i class="glyphicon glyphicon-remove cursor-hand" data-bind="click: function () { $root.deleteLine($data); }"></i></td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class=" col-lg-2">
                <button data-bind="click: function () { $root.editLine(); }" class="btn btn-primary" id="add-new-user" type="button" data-toggle="modal" data-target="#add-user-modal">Add new user</button>
            </div>
            <div class="col-md-8 col-md-offset-0" data-bind="if: totalLines() > 1 || searchKey() != ''">
                <ul class="pager">
                    <li><a data-bind="click: previousPage" href="#">Previous</a></li>
                    <li>
                        <label data-bind="text: currentPageIndex() + 1" class="badge"></label>
                        /
                        <label data-bind="text: totalPages()" class="badge"></label>
                    </li>
                    <li><a data-bind="click: nextPage" href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>



    <div class="modal fade" id="add-user-modal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Add a user</h4>
                </div>

                <form id="add-book-form" data-bind="submit: saveLine">
                    <div class="bg-danger">@Html.ValidationSummary()</div>

                    <div class="modal-body form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.AddUser.UserName, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.AddUser.UserName, new { @class = "form-control", @placeholder = "User name" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.AddUser.Email, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.AddUser.Email, new { @class = "form-control", @placeholder = "Email" })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
